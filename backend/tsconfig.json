{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true    
    },
    "include": [
        "lib/**/*.ts",
        "src/**/*.ts",
        "ormconfig.ts",
    ]
}